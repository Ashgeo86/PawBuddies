<h1><%= @animal.name %>'s Profile</h1>

<%= form_with model: [ @animal, Booking.new ] do |form| %>
  <div>
    <%= form.label :start_date %>
    <%= form.date_select :start_date %>
  </div>

  <div>
    <%= form.label :finish_date %>
    <%= form.date_select :finish_date %>
  </div>

  <div>
    <%= form.submit 'Book Now' %>
  </div>

  <% if @booking && @booking.errors.any? %>
    <div class="errors">
      <h2>Booking Errors:</h2>
      <ul>
        <% @booking.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>

